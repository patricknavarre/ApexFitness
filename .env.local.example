# MongoDB Atlas
MONGODB_URI=mongodb+srv://<user>:<password>@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=run_openssl_rand_base64_32

# Google OAuth (optional for local)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# AWS (optional when USE_LOCAL_STORAGE=true)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=apex-fitness-photos
CLOUDFRONT_DOMAIN=your-distribution.cloudfront.net

# Anthropic (for AI analysis, workout plan, nutrition)
ANTHROPIC_API_KEY=

# Local dev: set to true to skip S3 and store uploads in .apex-uploads/
USE_LOCAL_STORAGE=true
